<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KWebPortal</title>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/bootstrap.css">
    <link rel="stylesheet" href="~/assets/vendors/bootstrap-icons/bootstrap-icons.css">
    <link rel="stylesheet" href="~/assets/vendors/perfect-scrollbar/perfect-scrollbar.css">
    <link rel="stylesheet" href="~/assets/vendors/datatables/datatables.min.css">
    <link rel="stylesheet" href="~/assets/css/app.css">
</head>
<body>
    @await Component.InvokeAsync("ImpersonationBar")

    <div id="app">
        <div id="sidebar" class="active">
            <div class="sidebar-wrapper active">
                <div class="sidebar-header">
                    <div class="d-flex justify-content-between">
                        <div class="logo">
                            <a href="/"><img src="~/assets/images/logo/logo.png" alt="Logo"></a>
                        </div>
                        @if (User.Identity.IsAuthenticated && !string.IsNullOrEmpty(User.FindFirst("StoreName")?.Value))
                        {
                            <div class="store-info ms-2">
                                <span class="badge bg-primary">@User.FindFirst("StoreName")?.Value</span>
                            </div>
                        }
                    </div>
                </div>
                <div class="sidebar-menu">
                    <ul class="menu">
                        <li class="sidebar-item">
                            <a href="@Url.Action("Index", "Home")" class="sidebar-link">
                                <i class="bi bi-grid-fill"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>

                        @if (User.HasClaim("IsSuperAdmin", "True"))
                        {
                            <li class="sidebar-item">
                                <a href="@Url.Action("UserManagement", "Account")" class="sidebar-link">
                                    <i class="bi bi-people-fill"></i>
                                    <span>User Management</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a href="@Url.Action("Index", "Store")" class="sidebar-link">
                                    <i class="bi bi-shop"></i>
                                    <span>Stores</span>
                                </a>
                            </li>
                        }

                        @if (User.HasClaim("IsStoreAdmin", "True"))
                        {
                            <li class="sidebar-item has-sub">
                                <a href="#" class="sidebar-link">
                                    <i class="bi bi-stack"></i>
                                    <span>Products</span>
                                </a>
                                <ul class="submenu">
                                    <li class="submenu-item">
                                        <a href="@Url.Action("Index", "Product")">Product List</a>
                                    </li>
                                    <li class="submenu-item">
                                        <a href="@Url.Action("Categories", "Product")">Categories</a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <div id="main">
            <header class="mb-3">
                <a href="#" class="burger-btn d-block d-xl-none">
                    <i class="bi bi-justify fs-3"></i>
                </a>
            </header>

            <div class="page-heading d-flex justify-content-between align-items-center">
                <h3>@ViewData["Title"]</h3>
                <div class="user-menu dropdown">
                    <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle fs-4 me-2"></i>
                        <span>@User.FindFirst("Name")?.Value</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <h6 class="dropdown-header">Hello, @User.FindFirst("Name")?.Value!</h6>
                        </li>
                        <li>
                            <a class="dropdown-item" href="@Url.Action("Profile", "Account")">
                                <i class="bi bi-person"></i> Profile
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                                @Html.AntiForgeryToken()
                                <a href="javascript:document.getElementById('logoutForm').submit()" class="dropdown-item">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </a>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="page-content">
                @RenderBody()
            </div>

            <footer>
                <div class="footer clearfix mb-0 text-muted">
                    <div class="float-start">
                        <p>&copy; @DateTime.Now.Year - KWebPortal</p>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/assets/vendors/jquery/jquery.min.js"></script>
    <script src="~/assets/vendors/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendors/datatables/datatables.min.js"></script>
    <script src="~/assets/js/main.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });

        // Handle active menu items
        $(document).ready(function() {
            const currentUrl = window.location.pathname;
            $('.sidebar-item a').each(function() {
                if ($(this).attr('href') === currentUrl) {
                    $(this).closest('.sidebar-item').addClass('active');
                    $(this).closest('.submenu').addClass('active').slideDown();
                    $(this).closest('.sidebar-item.has-sub').addClass('active');
                }
            });
        });
    </script>
</body>
</html>
