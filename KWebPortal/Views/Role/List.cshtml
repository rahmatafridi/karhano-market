@model IEnumerable<BAL.Model.RoleVM>
@{
    ViewData["Title"] = "List";
}
<section class="section">
    <div class="row" id="table-head">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Roles  List</h4>
                </div>

                <div>
                    <a asp-action ="Add" class="btn btn-primary me-1 mb-1"> Add Role</a>
                </div>
                <div class="card-content">

                    <!-- table head dark -->
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Name</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var role in Model)
                                {
                                    <tr>
                                        <td>@role.Name</td>
                                        <td>@(role.Status ? "Active" : "Inactive")</td>
                                        <td>
                                            <a asp-controller="Role" asp-action="Edit" asp-route-id="@role.Id"><i class="align-middle" data-feather="edit-2"></i> Edit</a> |
                                            <a asp-action="Delete" asp-route-id="@role.Id" onclick="return confirm('Are you sure you want to delete this role?');"><i class="align-middle" data-feather="trash"></i> Delete</a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
