@model IEnumerable<KarhanoMarket.Models.Company>

@{
    ViewData["Title"] = "Companies";
}

@await Html.PartialAsync("_Navbar")

<div class="container mt-4">
    <h2>Companies</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Active</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var company in Model)
            {
                <tr>
                    <td>@company.Name</td>
                    <td>@company.Email</td>
                    <td>@company.Phone</td>
                    <td>@company.Address</td>
                    <td>@(company.IsActive ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
