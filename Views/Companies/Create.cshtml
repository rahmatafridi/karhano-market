@{
    Layout = "_Layout";
}
@model KarhanoMarket.Models.Company

@{
    ViewData["Title"] = "Create Company";
}

<div class="row">
    <div class="col-12 ">
        <div class="card">
            <div class="card-body p-4">

<h1 class="mb-4">Create Company</h1>

                <form asp-action="Create" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger mb-3"></div>
        <div class="col-md-6">
        <label asp-for="Name" class="form-label">@Html.DisplayNameFor(model => model.Name)</label>
        <input asp-for="Name" name="Name" class="form-control"  placeholder="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
                    <div class="col-md-6">
        <label asp-for="Email" class="form-label">@Html.DisplayNameFor(model => model.Email)</label>
                        <input asp-for="Email" name="Email" class="form-control" placeholder="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
                    <div class="col-md-6">
        <label asp-for="Phone" class="form-label">@Html.DisplayNameFor(model => model.Phone)</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
       <div class="col-md-6">
        <label asp-for="Address" class="form-label">@Html.DisplayNameFor(model => model.Address)</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
                    <div class="col-md-6">
        <label asp-for="Description" class="form-label">@Html.DisplayNameFor(model => model.Description)</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <h3 class="mt-4 mb-3">Admin User Details</h3>
                    <div class="col-md-6">
        <label for="adminFullName" class="form-label">Full Name</label>
        <input type="text" name="adminFullName" class="form-control" required />
    </div>
                    <div class="col-md-6">
        <label for="adminEmail" class="form-label">Email</label>
        <input type="email" name="adminEmail" class="form-control" required />
    </div>
                    <div class="col-md-6">
        <label for="adminPassword" class="form-label">Password</label>
        <input type="password" name="adminPassword" class="form-control" required />
    </div>
                    <div class="col-md-6">
                        </div>

    <div class="col-lg-2">

   
                    <button type="submit" class="btn ripple btn-primary px-5">Create</button>
                    </div>
</form>


</div>
</div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
